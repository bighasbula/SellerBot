[project]
name = "photosession-seller-bot"
description = "Telegram bot for selling photosession packages with dynamic pricing from Supabase"
language = "python"

[techstack]
backend = ["python", "pyTelegramBotAPI", "supabase (via REST API or client)"]
database = "supabase"
env = [".env (for TELEGRAM_BOT_TOKEN, SUPABASE_URL, SUPABASE_KEY)"]

[folders]
source = "."
scripts = ["bot.py", "supabase_utils.py"]
assets = []

[rules]
entry_point = "bot.py"
use_env = true
use_supabase = true
modular_code = true
no_hardcoded_plans = true
